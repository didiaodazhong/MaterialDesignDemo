<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.peixing.materialdesigndemo">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.BannerActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.BaseActivity" />
        <activity
            android:name=".activity.CollaspingActivity"
            android:theme="@style/CollaspTheme"></activity>

        <activity android:name=".activity.VrPhotoActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.VrPlayerActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.VrVideoActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>